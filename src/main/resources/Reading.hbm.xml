<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="Reading" table="Reading">
      <meta attribute="class-description">
         This class contains readings detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="host" column="host" type="string"/>
      <property name="sensor" column="sensorId" type="string"/>
      <property name="timestamp" column="timestamp" type="string"/>
      <property name="reading" column="reading" type="string"/>
   </class>
</hibernate-mapping>